<p id="notice"><%= notice %></p>

<h1>Listing Chats</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th>Spoken user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <% if chat.user_id == current_user.id || chat.spoken_user_id == current_user.id %>
        <td><%= chat.message %></td>
        <td><%= chat.user.name %></td>
        <td><%= User.find_by(id: chat.spoken_user_id).name %></td>
        <td><%= link_to 'Show', chat %></td>
        <% end %>
        <% if chat.user_id == current_user.id %>
        <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
        <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

